@import './variable'

/* card
========================================================================== */
.card
  position relative
  background #fff
  &-header
    color $color-text-secondary
    font-size 28rpx
    font-weight 700
    padding 16rpx 24rpx
.card-shadow
  position relative
  background #fff
  border 1rpx solid #e0e0e0
  border-radius 7rpx
  box-shadow 0 0 6rpx rgba(0, 0, 0, 0.15)
  z-index 10
  transition all 0.2s ease
/* task
========================================================================== */
.task-item
  display flex
  align-items start
  padding 16rpx 24rpx
  border-bottom 1rpx solid $color-divider
  &-main
    flex 1
  &-title
    color $color-text
    font-size 36rpx
  &-meta
    display flex
    align-items center
    flex-wrap wrap
    padding 2rpx 0
    line-height 1.5
    color $color-text-prompt
  &-label
    margin-right 24rpx
    font-size 28rpx
.tag
  display inline-block
  height 30rpx
  line-height 30rpx
  padding 0 10rpx
  color #fff
  font-size 20rpx
  border-radius 4px
  vertical-align middle
  overflow hidden
.task-meta
  display flex
  align-items center
  padding 16rpx 24rpx
  font-size 36rpx
  background #fff
  border-bottom 1px solid $color-divider
  &-picker
    flex 1
    margin-left 24rpx
    font-size 32rpx
    color $color-text
  &-placeholder
    flex 1
    font-size 32rpx
    color $color-text-prompt
  &-link
    flex 1
    font-size 32rpx
    color $color-primary
  &-label
    flex 1
    font-size 32rpx
    color $color-text-secondary
/* member select page
========================================================================== */
.member
  display flex
  align-items center
  padding 16rpx 24rpx
  border-bottom 1rpx solid $color-divider
  &-avatar
    display flex
    align-items center
    justify-content center
    width 80rpx
    height 80rpx
    margin-right 24rpx
    color #fff
    font-size 24rpx
    border-radius 50%
  &-info
    flex 1
  &-name
    padding-right 24rpx
    color $color-text
    font-size 36rpx
  &-role
    color $color-text-prompt
    font-size 28rpx
  &-phone
    color $color-text-prompt
    font-size 28rpx
